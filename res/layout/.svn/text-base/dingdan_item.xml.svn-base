<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip" >

        <TextView
            android:id="@+id/txt_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="13dip"
            android:text="完成"
            android:textColor="#ff4900"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_del" />

        <TextView
            android:id="@+id/txt_dingdan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_del"
            android:paddingTop="3dip"
            android:text="订单号:15428432"
            android:textColor="#616161"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

    <com.sunnyestate.views.ScrollViewWithListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/gridview_line"
        android:dividerHeight="0.5dip"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </com.sunnyestate.views.ScrollViewWithListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="5dip" >

        <Button
            android:id="@+id/img_go_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_wuliu"
            android:background="@drawable/frame_red_btn"
            android:paddingBottom="5dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="5dip"
            android:src="@drawable/img_go_pay"
            android:text="去付款"
            android:textColor="#ff4f00"
            android:textSize="16sp" />

        <Button
            android:id="@+id/img_wuliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@+id/img_again_buy"
            android:background="@drawable/frame_gray_btn"
            android:paddingBottom="5dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="5dip"
            android:src="@drawable/img_wuliu"
            android:text="查看物流"
            android:textColor="#6d6d6d"
            android:textSize="16sp" />

        <Button
            android:id="@+id/img_again_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/frame_red_btn"
            android:paddingBottom="5dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="5dip"
            android:text="再次购买"
            android:textColor="#f15353"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_fukuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="实付款:"
            android:textColor="#616161"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

</LinearLayout>