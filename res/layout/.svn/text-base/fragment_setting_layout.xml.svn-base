<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="#a29164" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="20dip"
        android:background="@color/gridview_line" />

    <TextView
        android:id="@+id/txt_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seting_menu_bg"
        android:drawableRight="@drawable/setting_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="清除缓存"
        android:textColor="#2a2a2a"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

    <TextView
        android:id="@+id/txt_freedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seting_menu_bg"
        android:drawableRight="@drawable/setting_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="问题反馈"
        android:textColor="#2a2a2a"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

    <TextView
        android:id="@+id/txt_update_new_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seting_menu_bg"
        android:drawableRight="@drawable/setting_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="版本更新"
        android:textColor="#2a2a2a"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

    <TextView
        android:id="@+id/txt_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seting_menu_bg"
        android:drawableRight="@drawable/setting_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="关于我们"
        android:textColor="#2a2a2a"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gridview_line" />

</LinearLayout>