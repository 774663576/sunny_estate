<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <!-- <View -->
    <!-- android:id="@+id/liine" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="0.5dip" -->
    <!-- android:background="#d5d5d5" /> -->

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tab_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_home_button"
            android:button="@null"
            android:drawableTop="@drawable/tab_home_button" />

        <RadioButton
            android:id="@+id/tab_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_categoty_button"
            android:button="@null"
            android:drawableTop="@drawable/tab_categoty_button" />

        <RadioButton
            android:id="@+id/tab_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_my_button"
            android:button="@null"
            android:drawableTop="@drawable/tab_my_button" />

        <RadioButton
            android:id="@+id/tab_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_shopping_button"
            android:button="@null"
            android:drawableTop="@drawable/tab_shopping_button" />

        <RadioButton
            android:id="@+id/tab_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_setting_button"
            android:button="@null"
            android:drawableTop="@drawable/tab_setting_button" />
    </RadioGroup>

</LinearLayout>